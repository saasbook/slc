<div style="margin: 0 auto; width:70%">
  <div class="panel panel-default" style=width:70%">
  
    <div class="panel-heading text-center" id="signup" style="background-color: #FDB515">
      <h1>Sign Up</h1>
    </div>
    <div class="panel-body" style="text-align:center">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
      
    
         <div class="field" style="margin-top:50px;text-align:center">
          <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
        </div>
      
        <div class="field" style = "margin-top:25px">
          <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
        </div>
        <h6> <em> (<%= @minimum_password_length %> characters minimum) </em> </h6>
      
        <div class="field" style = "margin-top:15px">
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password confirmation" %>
        </div>
      
       <div class="actions" style= "margin-bottom:50px;text-align:center">
          <div style= "margin-top:25px">
            <%= f.submit "Sign up" %>
        </div>
      </div>
     <% end %>
    </div>
  </div>
</div>
<div style= "text-align:center"> 
  <%= render "devise/shared/links" %>
  <%= link_to "Back to Home", root_path %>
</div>