<div style="margin: 0 auto; width:70%">
  <div class="panel panel-default" style=width:70%">
  
    <div class="panel-heading text-center">
      <h1>Sign Up</h1>
    </div>

    <div class="panel-body" style="width:70%;margin-left:15%">

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
      
    
         <div class="field" style="margin-top:50px">
          <%= f.email_field :email, autofocus: true, placeholder: "Email", style: "margin-left:33%" %>
        </div>
      
        <div class="field" style = "margin-top:25px">
          <!--<% if @minimum_password_length %>-->
          <!--<em>(<%= @minimum_password_length %> characters minimum)</em>-->
          <!--<% end %><br />-->
          <%= f.password_field :password, autocomplete: "off", placeholder: "Password", style: "margin-left:33%" %>
        </div>
        <h6 style = "margin-left:33%"> <em> (6 characters minimum) </em> </h6>
      
        <div class="field" style = "margin-top:15px">
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password confirmation", style: "margin-left:33%"  %>
        </div>
     
      
       <div class="actions" style= "margin-bottom:50px">
          <div style= "margin-top:25px">
            <%= f.submit "Sign up", style: "margin-left:42%" %>
        </div>
      </div>
     <% end %>

    </div>
  </div>
</div>



<div style= "text-align:center"> 
  <%= render "devise/shared/links" %>
</div>

