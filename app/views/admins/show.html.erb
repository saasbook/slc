<h1 style="text-align:center;margin-top:-15px">Tutors</h1>

<table class="table table-striped table-hover table-bordered" style="width: auto;" align="center">
  <thead class="thead-dark" style="background-color: #FDB515">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>SID</th>
      <th>Phone Number</th>
      <th>Year</th>
    </tr>
  </thead>
  <tbody>
    <% @tutors.each do |name| %>                    
        <tr>
          <td><%= name.first_name %></td>
          <td><%= name.last_name %></td>
          <td><%= name.email %></td>
          <td><%= name.sid %></td>
          <td><%= name.phone_number %></td>
          <td><%= name.year %></td>
        </tr>
    <% end %>
  </tbody>
</table> 

<h1 align="center">Tutees</h1>
<table class="table table-striped table-hover table-bordered" style="width: auto;" align="center">
  <thead class="thead-dark" style= "background-color: #FDB515">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>SID</th>
      <th>Phone Number</th>
      <th>Year</th>
      <th>Tutor</th>
    </tr>
  </thead>
  <tbody>
    <% @tutees.each do |name| %>                    
        <tr>
          <td><%= name.first_name %></td>
          <td><%= name.last_name %></td>
          <td><%= name.email %></td>
          <td><%= name.sid %></td>
          <td><%= name.phone_number %></td>
          <td><%= name.year %></td>
          <% if !name.tutor.nil? %>
            <td> <%= name.tutor.first_name %>  <%= name.tutor.last_name %></td>
          <% else %>
            <td> <%= name.tutor %></td>
          <% end %>
        </tr>
    <% end %>
  </tbody>
</table> 

<div style="text-align:center">
    <%= button_to "Logout", destroy_admin_session_path, :method => :delete, :class => "btn btn-default" %>
    <br>
    <%= button_to "Back to Home", root_path, :method => :get, :class => "btn btn-default", :style => "margin-bottom:30px" %>
</div>

