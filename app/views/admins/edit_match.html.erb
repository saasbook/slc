
<h1 align="center"><%= @tutee.first_name %>  <%= @tutee.last_name %></h1>
<br></br>

<% if !@tutee.tutor.nil? %>
  <h1 align="center"> Current Tutor:<%= @tutee.tutor.first_name %>  <%= @tutee.tutor.last_name %> </h1>
<% else %>
  <h1 align="center"> Current Tutor: None </h1>
<% end %>

<br></br>

<h1 align="center">Available Tutors</h1>
<table class="table table-striped table-hover table-bordered" style="width: auto;" align="center">
  <thead class="thead-dark">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Reassign</th>
    </tr>
  </thead>
  <tbody>
    <% @avail_tutors.each do |tutor| %>                    
        <tr>
          <td><%= tutor.first_name %></td>
          <td><%= tutor.last_name %></td>
          <td><%= link_to "Assign", assign_path(@tutee, tutor), :method => :get %></td>
        </tr>
    <% end %>
  </tbody>
</table> 