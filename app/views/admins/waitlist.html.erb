<h1 style="text-align:center;margin-top:-15px">Tutee Waitlist</h1>
<br>
<br>
<h3 style="text-align:center;margin-top:-15px">Total Number of Students: <%= @waitlist.total_tutees%></h3>

<br>
<br>

<table class="table table-striped table-hover table-bordered" style="width: auto;" align="center">
  <thead class="thead-dark" style="background-color: #FDB515">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>SID</th>
    </tr>
  </thead>
  <tbody>
    <% @sorted_waitlist.each do |name| %>                    
        <tr>
          <td><%= name.first_name %></td>
          <td><%= name.last_name %></td>
          <td><%= name.email %></td>
          <td><%= name.sid %></td>
        </tr>
    <% end %>
  </tbody>
</table> 